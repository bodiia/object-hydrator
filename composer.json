{
  "require": {
    "php": "^8.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "phpcs": "php ./vendor/bin/phpcs --standard=PSR12 --colors ./src",
    "phpcs-fix": "php ./vendor/bin/phpcbf --standard=PSR12 ./src"
  }
}
